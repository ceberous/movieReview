
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

  <nav class ="navbar navbar-default">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#toggle-links-main">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Movie Review App" , root_path , class: "navbar-brand" %>
    </div>

    <!--Collect Navbar Dropdown Links-->
    <div class="collapse navbar-collapse" id="toggle-links-main">

      <ul class="nav navbar-nav navbar-right tcenter">            

        <% if user_signed_in? %>
          <li class="active">
            <%= link_to "New Movie" , new_movie_path %>
            <span class="sr-only">(current)</span>
          </li>
        
          <li>
            <%= link_to "Logout??" , destroy_user_session_path , :method => :delete %>
          </li>

        <% else %> 
          <li class="active">
            <%= link_to "Sign In" , new_user_session_path %>
            <span class="sr-only">(current)</span>
          </li>

          <li>
            <%= link_to "Sign Up" , new_user_registration_path %>
          </li>
        <% end %>

        <%= form_tag search_movies_path , method: :get , class: "navbar-form navbar-right" , role: "search" do %>
          <p class="tcenter" style="overflow: -moz-scrollbars-none;">
            <%= text_field_tag :search , params[:search] , placeholder: "Database Search" , class: "form-control" %>
            <%= submit_tag "Search" , name: nil , class: "btn btn-default" %>
          </p>
        <% end %>

      </ul>

    </div>

  </nav>

  <% flash.each do |name,msg| %>
    <%= content_tag(:div,msg, class: "alert alert-info") %>
  <% end %>

</div>