<!DOCTYPE html>
<html>
<head>
  <title>Movie Review App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
</head>
<body>

<!-- navigation panel -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-main">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Movie Review App" , root_path , class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse-main">
      <ul id="navCenter" class="nav navbar-nav navbar-right">
        <li><a href="#home">Home</a></li>
        <li><a href="#about">About</a></li>
        <li><a href="#services">Services</a></li>
        <li><a href="#information">Information</a></li>
        <li><a href="#google_map">Contact</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- First Section - HOME -->
<div id="home" class="home" style="padding-top:60px;">
	<div class="container-fluid">
		<div class="row">
		
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 center ">
				<% flash.each do |name,msg| %>
					<%= content_tag(:div,msg, class: "alert alert-info") %>
				<% end %>

				<%= yield %>
			</div>
			
		</div>
	</div>
</div>

</body>
</html>
