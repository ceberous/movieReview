<div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4">

	<%= simple_form_for([ @movie , @review ]) do |f| %>
	
		<%= f.error_notification %>

		<div id="star-rating">
			
		</div>

	    <%= f.input :comment , placeholder: "Comment" , class: "form-control"  %> <br>


	    <%= f.button :submit , class: "btn btn-success form-control" %> <br>

		<br> <br>
	  	<%= link_to 'Cancel', @movie , class: "btn btn-warning form-control" %>

	  	<br> <br>

	  	

	<% end %>

</div>

<script>
	$('#star-rating').raty({
		path: '/',
		scoreName: 'review[rating]'
	});
</script>