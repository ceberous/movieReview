<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

  <h1 class="tcenter"><%= @movie.title %></h1>
  
  <%= image_tag @movie.image.url(:medium) , class: "img-responsive center-block" %>

  <br>

  <div class="tcenter">
    <p>
      <strong>Description</strong><br>
      <%= @movie.description %>
    </p>

    <p>
      <strong>Movie length:</strong>
      <%= @movie.movie_length %>
    </p>

    <p>
      <strong>Director:</strong>
      <%= @movie.director %>
    </p>

    <p>
      <strong>Rating:</strong>
      <%= @movie.rating %>
    </p>

    <%= link_to 'Edit', edit_movie_path(@movie) , class: "btn btn-primary" %> |
    <%= link_to 'Back', movies_path , class: "btn btn-warning" %>
    
  </div>

</div>
