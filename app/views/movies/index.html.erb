<div class="row">

  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <% @movies.each do |movie| %>
      
      
      <div class="col-sm-6 col-md-3 col-xs-12">
        <div class="thumbnail">
          <%= link_to movie do %>
            <%= image_tag movie.image.url(:medium) , class: "img-responsive" %>
          <% end %>
        </div>
      </div>

    <% end %>

  </div>

</div>
