<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <% @movies.each do |movie| %>
      
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <%= link_to movie do %>
            <%= image_tag movie.image.url(:medium) , class: "img-responsive thumbnail2" %>
          <% end %>
      </div>

    <% end %>
  </div>
</div>
